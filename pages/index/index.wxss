.header {
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin-bottom: 30rpx;
  padding: 20rpx;
  height: 54rpx;
}

.header .plus {
  width: 41rpx;
  height: 41rpx;
  margin-right: 20rpx;
}

.header .new-todo {
  flex: 1;
  font-size: 28rpx;
}
.header .record{
  flex: 1;
  font-size: 28rpx;
  color: #ccc;
   padding: 8rpx; 
   border-radius: 8rpx;
}

.todos{
   border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  max-height: 1000rpx;
}

.todos .item{
  align-items: center;
  padding: 45rpx 25rpx 25rpx;
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
  position: relative;
}

.todos .item .time{
  position: absolute;
  left: 30rpx;
  top: 10rpx;
  font-size: 22rpx;
  color: #999;
}

.todos .item:last-of-type{
  border: none;
}

.todos .item .checkbox {
  align-items:flex-start;
  margin-right: 30rpx;
}

.todos .item .content{
  flex: 1;
  font-size: 30rpx;
  color: #444;
  margin-right: 30rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.todos .item .content .finish{
  text-decoration: line-through;
}

.item .voice{
  color: #ccc;
   font-size: 30rpx;
}

.item .name {
  font-size: 30rpx;
  color: #444;
  margin-right: 20rpx;
}


.todos .item .remove{
  align-items:flex-start;
  margin-top: -20rpx;
}


.empty text{
  display: block;
  text-align: center;
  color: #666;
}

.empty .title{
  font-size: 60rpx;
  color: #333;
  margin: 200rpx 0 50rpx;
}

.yuying{
   width: 40rpx;
  height: 40rpx;
}